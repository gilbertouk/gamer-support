generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tickets  Ticket[]
  comments Comment[]
  Session  Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Ticket {
  id          String       @id @default(cuid())
  title       String
  game        String
  description String
  urgency     UrgencyLevel @default(SUAVE)
  status      TicketStatus @default(ABERTO)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  comments Comment[]

  @@map("tickets")
}

model Comment {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now()) @map("created_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  ticketId String @map("ticket_id")
  ticket   Ticket @relation(fields: [ticketId], references: [id])

  @@map("comments")
}

enum TicketStatus {
  ABERTO
  RESOLVIDO
  IGNORADO
}

enum UrgencyLevel {
  SUAVE
  MODERADO
  AGORA
  APAGA_O_SERVIDOR
}

enum UserRole {
  USER
  ADMIN
}
